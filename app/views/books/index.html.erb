<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>

<table >
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destory", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>

<% end %>
</table>



<h2>New book</h2>

<%= form_for(@book, url: '/books') do |f| %>

<% if @book.errors.any? %>
<h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>
